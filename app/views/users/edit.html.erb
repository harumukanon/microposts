<h1>Edit</h1>
<p>
  <%= gravatar_for @user %>
  <%= @user.name %>
</p>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
        
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>
        
        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control', placeholder: "●●●●●●●" %>
        
        <%= f.label :area %>
        <%= f.text_field :area, class: 'form-control' %>
        
        <%= f.label :comment %>
        <%= f.text_area :comment, class: 'form-control', placeholder: "自己紹介を500文字までどうぞ", rows: "10"  %>
        
        <%= f.submit "Edit", class: "btn btn-primary" %>
    <% end %>
    
        
    </div> 
</div>