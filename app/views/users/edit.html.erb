<h1><%= t('Edit') %></h1>
<p>
  <%= gravatar_for @user %>
  <%= @user.name %>
</p>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        
        <%= f.label t('name') %>
        <%= f.text_field :name, class: 'form-control' %>
        
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>
        
        <%= f.label t('password') %>
        <%= f.password_field :password, class: 'form-control', placeholder: "●●●●●●●" %>
        
        <%= f.label t('password_confirmation') %>
        <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "●●●●●●●" %>
        
        <%= f.label t('area') %>
        <%= f.text_field :area, class: 'form-control' %>
        
        <%= f.label t('comment') %>
        <%= f.text_area :comment, class: 'form-control', placeholder: t('please introduce yourself in 500 characters'), rows: "10"  %>
        
        <%= f.submit t('Edit'), class: "btn btn-primary" %>
    <% end %>
    
        
    </div> 
</div>