<div class="row">
    <aside class="col-md-4">
        <section class="user_info">
            <h1><%= gravatar_for @user %>
                <%= @user.name %>
            </h1>
            <br />    
            <h3>is followed by <%= @users.count %> users.</h3>
        </section>
    </aside>
  <div class="col-md-8">
       <% @users.each do |user| %>
    <table class="sample_01">
      <tr>
       <td><%= link_to gravatar_for(user, size: 50), user %></td>
       <td><%= link_to user.name, user %></td>
      </tr>
    </table>
      <% end %>
  </div>
</div>
