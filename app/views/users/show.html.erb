<div class="row">
    <aside class="col-md-4">
        <section class="user_info">
            <h1><%= gravatar_for @user %>
                <%= @user.name %>
            </h1>
            <br />    
            <h3>@<%= @user.area %></h3>
            <h5>自己紹介:<%= @user.comment %></h5>
        </section>
    </aside>
  <div class="col-md-8">
        <%= render 'follow_form' if logged_in? %>
        <% if @user.microposts.any? %>
          <h3>Microposts (<%= @user.microposts.count %>)</h3>
          <ol class="microposts">
            <%= render @microposts %>
          </ol>
        <% end %>
  </div>
</div>
