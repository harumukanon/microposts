<header class="navbar navbar-fixed-top navbar-inverse">
    <div class="container">
    <%= link_to "Microposts", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t('Home'), root_path %></li>

        <% if logged_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t('Users') %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t('user_following'), user_following_path(current_user) %></li>
              <li><%= link_to t('user_followers'), user_followers_path(current_user) %></li>
            </ul>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t('Account') %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t('Profile'), current_user %></li>
              <li><%= link_to t('Settings'), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t('Log out'), logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t('Log in'), login_path %></li>
        <% end %>

        <% I18n.available_locales.reject{|l| l == I18n.locale}.each do |locale| %>
        <li><%= link_to(locale_label(locale), i18n_url_for(params.merge(locale: locale))) %></li>
  <% end %>
      </ul>
    </nav>
  </div>
</header>